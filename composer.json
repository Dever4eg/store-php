{
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.1.0",
        "twig/twig": "^2.4",
        "swiftmailer/swiftmailer": "^6.0",
        "dever4eg/logger": "^1.3",
        "zendframework/zend-diactoros": "^1.8",
        "zendframework/zend-httphandlerrunner": "^1.0",
        "filp/whoops": "^2.2",
        "robmorgan/phinx": "^0.10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "App/",
            "Src\\": "Src/"
        }
    },
    "scripts": {
        "phinx": "php vendor/bin/phinx",
        "phinx-refresh": "php vendor/bin/phinx rollback && php vendor/bin/phinx migrate",
        "serve": "php -S 0.0.0.0:8080 -t public"
    }
}
