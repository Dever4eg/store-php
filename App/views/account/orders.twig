{% extends "/layouts/main.twig" %}

{% block content %}
    <h3>User account</h3>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Date</th>
            <th scope="col">Price</th>
            <th scope="col"></th>

        </tr>
        </thead>
        <tbody>

        {% for order in orders %}

            <tr>
                <a href="/">
                    <td>{{ order.id}}</td>
                    <td>{{ order.created_at}}</td>
                    <td class="price">${{ order.cost }}</td>
                    <td><a href="/account/order?id={{ order.id }}">Details</a></td>
                </a>
            </tr>



        {% else %}
            <h4>Orders not found</h4>
        {% endfor %}


        </tbody>
    </table>

{% endblock %}