{% extends "layouts/admin.twig" %}

{% block content %}
    <h4>Products</h4>
    <table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col" width="15%">Image</th>
        <th scope="col">Title</th>
        <th scope="col">Descriptopn</th>
        <th scope="col">Price</th>
    </tr>
    </thead>
    <tbody>

    {% for product in products %}

        <tr>
            <td>{{ product.id}}</td>
            <td><img src="{{ product.image }}" alt="" class="img-fluid"></td>
            <td>{{ product.title }}</td>
            <td>{{ product.description|slice(0, 200) }}...</td>
            <td class="price">${{ product.price }}</td>
        </tr>

    {% else %}
        <h4>Products not found</h4>
    {% endfor %}
{% endblock %}