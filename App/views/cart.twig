{% extends "layouts/main.twig" %}

{% block content %}
    <h3>Cart</h3>
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col" width="18%">Image</th>
                        <th scope="col">Product</th>
                        <th scope="col">Count</th>
                        <th scope="col">Cost</th>
                        <th scope="col">Summary</th>
                        <th scope="col">Controls</th>
                    </tr>
                    </thead>
                <tbody>


                {% for i, product in cart %}
                    <tr>
                        <td><img src="{{ product.image }}" alt="" class="img-fluid"></td>
                        <td class="align-middle">{{ product.title }}</td>
                        <td class="align-middle">---</td>
                        <td class="align-middle">{{ product.cost }}</td>
                        <td class="align-middle">---</td>
                        <td class="align-middle"><a href="/cart/remove?id={{ i }}" class="btn btn-danger">Remove</a></td>
                    </tr>
                {% else %}
                    Cart is empty
                {% endfor %}


                </tbody>
            </table>


        </div>
    </div>
{% endblock %}