<nav>
    <ul class="pagination">
        <li class="page-item {{ pagination.prev_page_url ?? 'disabled' }}">
            <a class="page-link" href="{{ pagination.prev_page_url }}" tabindex="-1">Previous</a>
        </li>

        {% if pagination.current_page > 1 %}
            <li class="page-item">
                <a class="page-link" href="{{ pagination.first_page_url }}">1</a>
            </li>
        {% endif %}

        {% if pagination.current_page-3 > 1 %}
            <li class="page-item">
                <a class="page-link disabled" href="#">...</a>
            </li>
        {% endif %}

        {% if pagination.current_page-2 > 1 %}
            <li class="page-item">
                <a class="page-link" href="{{ pagination.path ~ '?page=' ~ (pagination.current_page-2) }}">
                    {{ pagination.current_page-2 }}
                </a>
            </li>
        {% endif %}

        {% if pagination.current_page-1 > 1 %}
            <li class="page-item">
                <a class="page-link" href="{{ pagination.path ~ '?page=' ~ (pagination.current_page-1) }}">
                    {{ pagination.current_page-1 }}
                </a>
            </li>
        {% endif %}

        <li class="page-item active">
            <a class="page-link" href="#">{{ pagination.current_page }}<span class="sr-only">(current)</span></a>
        </li>

        {% if pagination.current_page+1 < pagination.last_page %}
            <li class="page-item">
                <a class="page-link" href="{{ pagination.path ~ '?page=' ~ (pagination.current_page+1) }}">
                    {{ pagination.current_page+1 }}
                </a>
            </li>
        {% endif %}

        {% if pagination.current_page+2 < pagination.last_page %}
            <li class="page-item">
                <a class="page-link" href="{{ pagination.path ~ '?page=' ~ (pagination.current_page+2) }}">
                    {{ pagination.current_page+2 }}
                </a>
            </li>
        {% endif %}


        {% if pagination.current_page+3 < pagination.last_page %}
            <li class="page-item">
                <a class="page-link disabled" href="#">...</a>
            </li>
        {% endif %}


        {% if pagination.current_page < pagination.last_page %}
            <li class="page-item">
                <a class="page-link" href="{{ pagination.last_page_url }}">{{ pagination.last_page }}</a>
            </li>
        {% endif %}

        <li class="page-item {{ pagination.next_page_url ?? 'disabled' }}">
            <a class="page-link" href="{{ pagination.next_page_url }}">Next</a>
        </li>
    </ul>
</nav>